EJERCICIO 59
print ("Ejercicio 59 Calcular el numero de permutaciones de N cosas R veces")
print ("N = 5")
print ("R = 4")
N = 5
R = 4

vuelta1 = (16*N)
Total_de_permutaciones = (vuelta1*R)
print (Total_de_permutaciones, "permutaciones")


