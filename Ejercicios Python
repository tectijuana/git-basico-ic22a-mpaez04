Ejercicio 61
print("Ejercicio 61 Arreglos de los primeros 3 enteros")
uno = "1"
dos = "2"
tres = "3"
print (uno+dos+tres)
print (uno+tres+dos)
print (dos+uno+tres)
print (dos+tres+uno)
print (tres+uno+dos)
print (tres+dos+uno)

