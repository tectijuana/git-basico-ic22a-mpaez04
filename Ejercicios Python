EJERCICIO 55
print("En la clase hay 20 estudiantes, 6 de 18 años, 10 de 19 años, 4 de 20 años.")
print("Que probabilidad hay de que salga uno de cada edad")
total = 20
a18 = 6
b19 = 10
c20 = 4
porcentajetotal= 100

print("La probabilidad de que salga un estudiante de 18 años es de ",(a18*porcentajetotal)/total,"%")
print("La probabilidad de que salga un estudiante de 19 años es de ",(b19*porcentajetotal)/total,"%")
print("La probabilidad de que salga un estudiante de 20 años es de ",(c20*porcentajetotal)/total,"%")

EJERCICIO 56
print("Se saca de una baraja una carta, si es rojo ganas un dolar, si es negra pierdes dos")
print("Que valor tiene el juego")
total = 52
rojo =26
negro = 26
valorrojo = 1
valornegro = 2

print("El juego tiene un valor de ",(rojo*valorrojo)+(negro*valornegro),"dolares")

EJERCICIO 57
print('Ejercicio 57, calcular pago de estacionamiento')
Est_total = 20
estacionamiento = 5
probabilidad = .50
primera = 0
segunda = 50
tercera_adelante = 100
cantidad_de_cobros = (Est_total*probabilidad)
cobro = (primera+segunda+(tercera_adelante*8))
print ((Est_total*estacionamiento/100), 'dolares por pagar los 5c por estacionamiento')
print ((cobro/100),'dolares de multas')

